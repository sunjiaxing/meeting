<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:id="@+id/layout_vip_detail"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <com.sb.meeting.ui.component.ChildViewPager
                    android:id="@+id/vp_image_list"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

                <LinearLayout
                    android:id="@+id/layout_vip_detail_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c_d8d8d8" />

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ppi_px_20_dp"
                android:text="@string/loading"
                android:textColor="@color/c_454545"
                android:textSize="@dimen/ppi_px_36_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c_d8d8d8" />

            <TextView
                android:id="@+id/tv_product_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loading" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c_d8d8d8" />

            <TextView
                android:id="@+id/tv_company_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ppi_px_5_dp"
                android:drawableRight="@mipmap/right_tip"
                android:padding="@dimen/ppi_px_20_dp"
                android:text="企业简介"
                android:textColor="@color/c_454545"
                android:textSize="@dimen/ppi_px_30_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c_d8d8d8" />

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ppi_px_5_dp"
                android:text="@string/loading" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ppi_px_5_dp"
                android:text="@string/loading" />

            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ppi_px_5_dp"
                android:text="@string/loading" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ppi_px_5_dp"
                android:text="@string/loading" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c_d8d8d8" />

            <LinearLayout
                android:id="@+id/layout_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/ppi_px_20_dp">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="@dimen/ppi_px_100_dp"
                    android:layout_height="@dimen/ppi_px_100_dp"
                    android:layout_marginRight="@dimen/ppi_px_20_dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_item_pic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/right_tip"
                    android:lineSpacingExtra="3dp"
                    android:text="企业微官网\n点击进入" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c_d8d8d8" />

            <TextView
                android:id="@+id/tv_company_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/right_tip"
                android:padding="@dimen/ppi_px_20_dp"
                android:text="@string/loading"
                android:textColor="@color/c_454545"
                android:textSize="@dimen/ppi_px_36_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c_d8d8d8" />

            <TextView
                android:id="@+id/tv_certificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/right_tip"
                android:padding="@dimen/ppi_px_20_dp"
                android:text="荣誉证书"
                android:textColor="@color/c_454545"
                android:textSize="@dimen/ppi_px_36_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c_d8d8d8" />

            <LinearLayout
                android:id="@+id/layout_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_product1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/iv_product1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ppi_px_200_dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/default_item_pic" />

                    <TextView
                        android:id="@+id/tv_product1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textColor="@color/c_454545" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_product2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/iv_product2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ppi_px_200_dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/default_item_pic" />

                    <TextView
                        android:id="@+id/tv_product2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textColor="@color/c_454545" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_product3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/iv_product3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ppi_px_200_dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/default_item_pic" />

                    <TextView
                        android:id="@+id/tv_product3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textColor="@color/c_454545" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_look_more_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/ppi_px_30_dp"
                android:text="查看更多产品"
                android:textColor="@color/c_ff946e"
                android:textSize="@dimen/ppi_px_36_sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
    <!-- 显示转轮 -->

    <include
        android:id="@+id/layout_loading_company_detail"
        layout="@layout/common_progressbar"
        android:visibility="gone" />

    <!-- 显示提示或异常信息 -->

    <include
        android:id="@+id/layout_error_company_detail"
        layout="@layout/common_result_message"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/ppi_px_80_dp"
        android:layout_height="@dimen/ppi_px_68_dp"
        android:layout_marginLeft="@dimen/ppi_px_20_dp"
        android:layout_marginTop="@dimen/ppi_px_20_dp"
        android:src="@mipmap/btn_vip_back" />
</RelativeLayout>