<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_e8e8e8"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/ppi_px_50_dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tv_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_item_white_bg"
        android:drawableRight="@mipmap/right_tip"
        android:padding="@dimen/ppi_px_20_dp"
        android:text="清除缓存"
        android:textColor="@color/c_454545"
        android:textSize="@dimen/ppi_px_30_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/ppi_px_30_dp"
        android:background="@color/line_color"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_check_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_item_white_bg"
        android:drawableRight="@mipmap/right_tip"
        android:padding="@dimen/ppi_px_20_dp"
        android:text="检查更新"
        android:textColor="@color/c_454545"
        android:textSize="@dimen/ppi_px_30_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/ppi_px_30_dp"
        android:background="@color/line_color"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_item_white_bg"
        android:drawableRight="@mipmap/right_tip"
        android:padding="@dimen/ppi_px_20_dp"
        android:text="给我们评分"
        android:textColor="@color/c_454545"
        android:textSize="@dimen/ppi_px_30_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ppi_px_30_dp"
        android:layout_marginRight="@dimen/ppi_px_30_dp"
        android:layout_marginTop="@dimen/ppi_px_100_dp"
        android:background="@drawable/button_default"
        android:gravity="center"
        android:padding="@dimen/ppi_px_22_dp"
        android:text="退出登录"
        android:textColor="@color/color_white"
        android:textSize="@dimen/ppi_px_36_sp" />
</LinearLayout>