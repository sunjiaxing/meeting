<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ppi_px_20_dp"
        android:background="@color/c_e8e8e8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/ppi_px_20_dp"
        android:paddingRight="@dimen/ppi_px_20_dp"
        android:paddingTop="@dimen/ppi_px_20_dp">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/loading"
            android:textColor="@color/c_454545"
            android:textSize="@dimen/ppi_px_32_sp" />

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/ppi_px_13_dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/ppi_px_13_dp"
            android:singleLine="true"
            android:text="关注"
            android:textColor="@color/c_c9ccd0"
            android:textSize="@dimen/ppi_px_24_sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/ppi_px_10_dp"
        android:paddingLeft="@dimen/ppi_px_20_dp"
        android:paddingRight="@dimen/ppi_px_20_dp"
        android:paddingTop="@dimen/ppi_px_10_dp">

        <TextView
            android:id="@+id/tv_exchange_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/loading"
            android:textColor="@color/c_ff946e"
            android:textSize="@dimen/ppi_px_32_sp" />

        <TextView
            android:id="@+id/tv_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_exchange_price"
            android:layout_marginLeft="@dimen/ppi_px_20_dp"
            android:layout_toRightOf="@+id/tv_exchange_price"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/loading"
            android:textColor="@color/c_c9ccd0"
            android:textSize="@dimen/ppi_px_24_sp" />

        <TextView
            android:id="@+id/tv_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_exchange_price"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/loading"
            android:textColor="@color/c_c9ccd0"
            android:textSize="@dimen/ppi_px_24_sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/ppi_px_20_dp"
        android:layout_marginRight="@dimen/ppi_px_20_dp"
        android:layout_marginTop="@dimen/ppi_px_10_dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/ppi_px_17_dp"
        android:paddingLeft="@dimen/ppi_px_20_dp"
        android:paddingRight="@dimen/ppi_px_20_dp"
        android:paddingTop="@dimen/ppi_px_17_dp">

        <TextView
            android:id="@+id/tv_valid_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/loading"
            android:textColor="@color/c_7d8e9d"
            android:textSize="@dimen/ppi_px_24_sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/ppi_px_20_dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_scan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ppi_px_46_dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/loading"
                android:textColor="@color/c_7d8e9d"
                android:textSize="@dimen/ppi_px_24_sp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/ppi_px_46_dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/loading"
                android:textColor="@color/c_7d8e9d"
                android:textSize="@dimen/ppi_px_24_sp" />

            <TextView
                android:id="@+id/tv_attention_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/loading"
                android:textColor="@color/c_7d8e9d"
                android:textSize="@dimen/ppi_px_24_sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>