<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:text="提示信息"
            android:textColor="@color/color_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"
            android:text="测试消息"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_message_content_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:text="测试消息"
            android:visibility="gone"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="22dp"
            android:background="#c5c5c5" />

        <LinearLayout
            android:id="@+id/layout_ok_and_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_left"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog_left"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_black"
                android:textSize="17.5sp" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#c5c5c5" />

            <Button
                android:id="@+id/btn_right"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog_right"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_black"
                android:textSize="17.5sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_one"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn_dialog_one"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_black"
            android:textSize="17.5sp" />
    </LinearLayout>

</LinearLayout>